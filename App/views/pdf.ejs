<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pdf Download</title>
    <style>
        .bordered-table {
            border-collapse: collapse;
        }

        .bordered-table td {
            border-left: 1px solid #A09C9C;
            border-right: 1px solid #A09C9C;
        }

        .bordered-table th {
            border: 1px solid #A09C9C;
        }

        .bordered-table tr:last-child td {
            border-bottom: 1px solid #A09C9C;
        }

        .main-total {
            border-top: 1px solid #A09C9C;
        }
    </style>
</head>

<body>
    <div style="background-color: white">
        <header style="text-align: center; padding-top: 10px;">
            <h1 style="color: black;">TIMBERLAND</h1>
            <h4 style="color: black;">HOME FOR VENEER</h4>
            <div style="color: black;">
                <p style="text-align: right; padding-right: 10px;">Date :- <%= new
                        Date(users.Date).toLocaleDateString('en-GB') %>
                </p>
            </div>
        </header>
    </div>
    <div>
        <table style="width: 100%; border-top: 1px solid #ddd;">
            <tr style="display: flex; justify-content: space-between;">
                <td style="border-right: 1px solid #ddd; padding-right: 50px;">
                    <div>
                        <table>
                            <tr>
                                <th>Token No. :- &nbsp;&nbsp;&nbsp;</th>
                                <td>
                                    <p style="margin: 10px 0;">
                                        <%= users.serialNumber %>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <th>Name :-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                                <td>
                                    <p style="margin: 10px 0;">
                                        <%= users.userName %>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <th>Address :- &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                                <td>
                                    <p style="margin: 10px 0;">
                                        <%= users.address %>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <th>Moblie No. :- &nbsp;&nbsp;</th>
                                <td>
                                    <p style="margin: 10px 0;">
                                        <%= users.mobileNo %>
                                    </p>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div style="margin-top: 80px; ">
                        <%if(users.sales){%>
                            <table>
                                <tr>
                                    <th>Sales Person :- &nbsp;</th>
                                    <td>
                                        <p style="margin: 10px 0;">
                                            <%= users.sales.Name %>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Moblie No. :- &nbsp;&nbsp;&nbsp;&nbsp;</th>
                                    <td>
                                        <p style="margin: 10px 0;">
                                            <%= users.sales.mobileNo %>
                                        </p>
                                    </td>
                                </tr>
                            </table>
                            <%}%>
                    </div>
                </td>
                <td style="padding-left: 50px;">
                    <h2 style="margin: 0;">Reference</h2>
                    <div>
                        <% if (users.architec.length) { %>
                            <table style="margin: 40px 0;">
                                <tr>
                                    <th style="padding-right: 110px;">ARCHITEC</th>
                                    <th>Mobile No.</th>
                                </tr>
                                <% users.architec.forEach(function(item) { %>
                                    <tr>
                                        <td style="margin-right: 110px;">
                                            <%= item.architecsName %>
                                        </td>
                                        <td>
                                            <%= item.mobileNo %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </table>
                            <% } %>
                    </div>
                    <div>
                        <%if(users.carpenter.length){%>
                            <table style="margin: 40px 0;">
                                <tr>
                                    <th style="padding-right: 100px;">CARPENTER </th>
                                    <th>Mobile No.</th>
                                </tr>
                                <% users.carpenter.forEach(function(item){ %>
                                    <tr>
                                        <td style="padding-right: 100px;">
                                            <%= item.carpentersName %>
                                        </td>
                                        <td>
                                            <%= item.mobileNo %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </table>
                            <% } %>
                    </div>
                    <div>
                        <%if(users.shop.length){%>
                            <table style="margin: 40px 0;">
                                <tr>
                                    <th style="padding-right: 160px;">Shop</th>
                                    <th>Mobile No.</th>
                                </tr>
                                <% users.shop.forEach(function(item){ %>
                                    <tr>
                                        <td style="padding-right: 160px;">
                                            <%= item.shopName %>
                                        </td>
                                        <td>
                                            <%= item.mobileNo %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </table>
                            <% } %>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <table style="width: 100%;" cellpadding="10px" class="bordered-table">
        <%if(Totalwithuser.length){%>
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th>Description</th>
                    <th>Area</th>
                    <th>Size</th>
                    <th>Rate</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody align="center">
                <% var totalSum=0; Totalwithuser.forEach(function(item, index) { totalSum +=item.total; %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= item.description %>
                        </td>
                        <td>
                            <%= item.area %>
                        </td>
                        <td>
                            <%= item.size %>
                        </td>
                        <td>
                            <%= item.rate %>
                        </td>
                        <td>
                            <%= item.quantity %>
                        </td>
                        <td>
                            <%= item.total %>
                        </td>
                    </tr>
                    <% }) %>
                        <tr>
                            <th colspan="6" align="right">Main Total:</th>
                            <td class="main-total">
                                <%= totalSum %>
                            </td>
                        </tr>
            </tbody>
            <%}%>
    </table>
    </div>
    <div style="background-color: white; color: black; text-align: center; margin-top: 20px;">&copy; Terms and
        conditions (T&C)</div>
</body>

</html>